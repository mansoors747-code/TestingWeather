<body>

<div class="container">
  <h2>üå¶Ô∏è Weather App</h2>
  <input type="text" id="cityInput" placeholder="Enter city name">
  <div>
    <button id="checkWeather">Check Weather</button>
    <button id="clearWeather">Clear</button>
  </div>
  <div id="weatherInfo"></div>
</div>

<script>
const apiKey = "1f2946dbcd0c4f6eb1960750250810";

const cityInput = document.getElementById("cityInput");
const checkWeatherBtn = document.getElementById("checkWeather");
const clearWeatherBtn = document.getElementById("clearWeather");
const weatherInfo = document.getElementById("weatherInfo");

// Fetch weather data
function getWeather() {
  const city = cityInput.value.trim();
  weatherInfo.innerHTML = ""; // clear previous info

  if (!city) {
    weatherInfo.innerHTML = "<p>Please enter a city name.</p>";
    return;
  }

  weatherInfo.innerHTML = "<p>Loading...</p>";

  fetch(`https://api.weatherapi.com/v1/current.json?key=${apiKey}&q=${city}`)
    .then(res => {
      if (!res.ok) throw new Error("City not found");
      return res.json();
    })
    .then(data => {
      const { location, current } = data;
      weatherInfo.innerHTML = `
        <h3>${location.name}, ${location.country}</h3>
        <p class="temp">${current.temp_c}¬∞C</p>
        <p class="desc">${current.condition.text}</p>
        <img src="${current.condition.icon}" alt="${current.condition.text}">
      `;
    })
    .catch(err => {
      weatherInfo.innerHTML = `<p>‚ö†Ô∏è ${err.message}. Try again!</p>`;
    });
}

// Clear input and weather info
function clearWeather() {
  cityInput.value = "";
  weatherInfo.innerHTML = "";
}

// Event listeners
checkWeatherBtn.addEventListener("click", getWeather);
clearWeatherBtn.addEventListener("click", clearWeather);
cityInput.addEventListener("keypress", (e) => {
  if (e.key === "Enter") getWeather();
});
</script>

</body>
</html>
